//- form generation interface mixin
mixin Form(formData, data, attrsExtender)
  +_proxy("div", formData.id + "--wrapper", formData.wrapperAttrs, "form", "formWrapper", attrsExtender)
    +_proxy("iframe", formData.attrs.target, formData.secondaryAttrs, "form", "formIframe", attrsExtender, false)
    +_BE(formData, data, "")
    +_proxy("form", formData.id, formData.attrs, "form", "form", attrsExtender)
      +_fieldRec(formData.fields, data, renderType)
    +_AE(formData, data, "")

//- translation helper
mixin TR(str)
  span #{__(str)}
